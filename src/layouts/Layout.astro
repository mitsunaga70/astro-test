---
import "../assets/styles/globals.scss";
import Meta from "../components/Meta.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Loading from "../components/Loading.astro";
import { ViewTransitions } from "astro:transitions";
export interface Props {
  pageTitle?: string;
  pageDesc?: string;
  pageNoindex?: boolean;
  pageClass?: string;
}

const { pageTitle, pageDesc, pageNoindex, pageClass = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <Meta pageTitle={pageTitle} pageDesc={pageDesc} pageNoindex={pageNoindex} />
    <ViewTransitions />
  </head>
  <body class={pageClass}>
    <Loading />

    <Header />
    <main transition:animate="slide">
      <slot />
    </main>
    <Footer />
    <script>
      import "../assets/script/fade";
      import "../assets/script/hash";
      import "../assets/script/resizereload";
    </script>

    <style lang="scss">
      main {
        // @include max(pt, 133, pc);
        @include bp(sp) {
        }
      }
    </style>
  </body>
</html>

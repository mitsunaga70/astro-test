---
import { slide } from "astro/transitions";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
const pageKey = "ABOUT";
const className = "pageTop";
---

<Layout pageClass={className}>
  <Container>
    <div class="wrap">
      <section class="section" transition:animate={slide({ duration: "0.2s" })}>
        <a href="/">topへ</a>
      </section>
      <section class="section" transition:animate={slide({ duration: "0.4s" })}>
        <a href="/">topへ</a>
      </section>
      <section class="section" transition:animate={slide({ duration: "0.6s" })}>
        <a href="/">topへ</a>
      </section>
      <section class="section" transition:animate={slide({ duration: "0.8s" })}>
        <a href="/">topへ</a>
      </section>
    </div>
  </Container>
</Layout>

<script></script>
<style lang="scss">
  .wrap {
    display: flex;
    gap: 30px;
  }
  section {
    background-color: red;
    width: 500px;
  }
  a {
    @include fCenter();
    height: 100px;
  }
</style>

---
import Layout from "../layouts/Layout.astro";
import gif1 from "../assets/img/top/fv_illust_01.gif";
import gif2 from "../assets/img/top/fv_illust_02.gif";
import gif3 from "../assets/img/top/fv_illust_03.gif";
import gif4 from "../assets/img/top/fv_illust_04.gif";

import { Image } from "astro:assets";
---

<Layout>
  <p class="">TOP</p>
  <a href="/about/">about</a>
  <div class="wrap">
    <figure transition:name="hero">
      <Image src={gif1} alt="aa" width={gif1.width} height={gif1.height} />
    </figure>
    <figure>
      <Image src={gif2} alt="aa" width={gif2.width} height={gif2.height} />
    </figure>
    <figure>
      <Image src={gif3} alt="aa" width={gif3.width} height={gif3.height} />
    </figure>
    <figure>
      <Image src={gif4} alt="aa" width={gif4.width} height={gif4.height} />
    </figure>
  </div>
  <form method="post" action="https://hyperform.jp/api/3YfthOUP">
    <div>
      <label>お名前</label>
      <input type="text" name="お名前" placeholder="例）山田太郎" required />
    </div>
    <div>
      <label>メールアドレス</label>
      <input type="email" name="email" placeholder="例）example@example.com" required />
    </div>
    <div>
      <label>お問い合わせ内容</label>
      <textarea name="お問い合わせ内容" required></textarea>
    </div>
    <button type="submit">送信</button>
  </form>
</Layout>
<style lang="scss">
  a {
    display: block;
    padding: 10px 20px;
    background-color: black;
    color: white;
    width: fit-content;
    margin-inline: auto;
  }
  p {
    @include bp(sp) {
    }
  }
  .wrap {
    display: flex;
    margin-top: 100px;
    img {
      display: block;
      width: 100%;
    }
  }

  form {
    margin-top: 80px;
    margin-left: auto;
    margin-right: auto;
    max-width: 720px;
  }
  @media screen and (max-width: 480px) {
    form {
      margin-top: 40px;
    }
  }

  label {
    width: 100%;
    max-width: 248px;
    letter-spacing: 0.05em;
    font-weight: bold;
    font-size: 18px;
  }
  @media screen and (max-width: 480px) {
    label {
      max-width: inherit;
      display: flex;
      align-items: center;
      font-size: 15px;
    }
  }
  label {
    margin-top: 8px;
    margin-bottom: auto;
  }
  @media screen and (max-width: 480px) {
    label {
      margin-top: 0;
    }
  }

  input {
    border: 1px solid #ddd;
    border-radius: 6px;
    margin-left: 40px;
    padding-left: 1em;
    padding-right: 1em;
    height: 48px;
    flex: 1;
    width: 100%;
    max-width: 410px;
    background: #eaedf2;
    font-size: 18px;
  }
  @media screen and (max-width: 480px) {
    input {
      margin-left: 0;
      margin-top: 18px;
      height: 40px;
      flex: inherit;
      font-size: 15px;
    }
  }
  textarea {
    border: 1px solid #ddd;
    border-radius: 6px;
    margin-left: 40px;
    padding-left: 1em;
    padding-right: 1em;
    height: 216px;
    flex: 1;
    width: 100%;
    max-width: 410px;
    background: #eaedf2;
    font-size: 18px;
  }
  @media screen and (max-width: 480px) {
    textarea {
      margin-top: 18px;
      margin-left: 0;
      height: 200px;
      flex: inherit;
      font-size: 15px;
    }
  }
  button {
    border-radius: 6px;
    margin-top: 32px;
    margin-left: auto;
    margin-right: auto;
    padding-top: 20px;
    padding-bottom: 20px;
    width: 280px;
    display: block;
    letter-spacing: 0.05em;
    background: #545454;
    color: #fff;
    font-weight: bold;
    font-size: 20px;
  }
  @media screen and (max-width: 480px) {
    button {
      margin-top: 24px;
      padding-top: 8px;
      padding-bottom: 8px;
      width: 160px;
      font-size: 16px;
    }
  }
</style>
 ../components/Threeee
